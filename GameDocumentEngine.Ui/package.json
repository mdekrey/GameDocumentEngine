{
	"name": "gamedocumentengine.ui",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"predev": "npm run generation",
		"dev": "vite build --watch --sourcemap --mode development --minify false",
		"prebuild": "npm run generation",
		"build": "tsc && vite build",
		"lint": "npm run typecheck && npm run eslint && npm run prettier",
		"lint:fix": "npm run typecheck && npm run eslint:fix && npm run prettier:fix",
		"eslint": "eslint \"**/*.{cjs,mjs,js,ts,tsx}\"",
		"eslint:fix": "eslint \"**/*.{cjs,mjs,js,ts,tsx}\" --fix",
		"prettier": "prettier --list-different \"**/*.{cjs,mjs,js,ts,tsx,md,json}\"",
		"prettier:fix": "prettier --write \"**/*.{cjs,mjs,js,ts,tsx,md,json}\"",
		"typecheck": "tsc --noemit",
		"prepare": "cd .. && husky install GameDocumentEngine.Ui/.husky",
		"generation": "npm run generate-api && npm run generate-zod",
		"generate-api": "openapi-codegen-typescript ../schemas/api.yaml src/api/ -c -o codegen.config.yaml",
		"generate-zod": "ts-node --esm --project tsconfig.node.json ./scripts/schemas-to-zod.ts",
		"test": "echo 'TODO'"
	},
	"dependencies": {
		"@microsoft/signalr": "^7.0.9",
		"@principlestudios/openapi-codegen-typescript": "^0.6.2",
		"@principlestudios/openapi-codegen-typescript-fetch": "^0.6.1",
		"@tanstack/react-query": "^4.29.19",
		"@tanstack/react-query-devtools": "^4.29.19",
		"@types/d3-shape": "^3.1.1",
		"d3-shape": "^3.2.0",
		"date-fns": "^2.30.0",
		"eslint-plugin-i18next": "^6.0.3",
		"glob": "^10.3.3",
		"i18next": "^23.2.11",
		"json-schema-to-zod": "^1.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-i18next": "^13.0.2",
		"react-icons": "^4.10.1",
		"rfc6902": "^5.0.1",
		"ts-node": "^10.9.1"
	},
	"devDependencies": {
		"@principlestudios/jotai-react-signals": "^0.4.1",
		"@types/node": "^20.4.0",
		"@types/react": "^18.2.14",
		"@types/react-dom": "^18.2.6",
		"@typescript-eslint/eslint-plugin": "^5.61.0",
		"@typescript-eslint/parser": "^5.61.0",
		"@vitejs/plugin-react": "^4.0.2",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.8.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.3",
		"immer": "^10.0.2",
		"jotai": "^2.2.2",
		"lint-staged": "^13.2.3",
		"postcss": "^8.4.25",
		"prettier": "^3.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.14.1",
		"react-slot-component": "^2.0.3",
		"tailwind-merge": "^1.13.2",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.1.6",
		"vite": "^4.4.2",
		"zod": "^3.21.4"
	}
}
